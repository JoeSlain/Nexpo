{
  "name": "nexpo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@lingui/babel-plugin-lingui-macro": "^5.5.2",
    "@types/negotiator": "^0.6.4",
    "@types/react": "~19.1.10",
    "check-dependency-version-consistency": "*",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "supabase": "2.54.11",
    "turbo": "^2.4.4",
    "typescript": "~5.9.2"
  },
  "scripts": {
    "check-deps": "check-dependency-version-consistency .",
    "check-deps:fix": "check-dependency-version-consistency . --fix",
    "native": "cd apps/expo && yarn start",
    "web": "cd apps/next && yarn next",
    "lingui:extract": "yarn workspace app lingui:extract --clean",
    "lingui:compile": "yarn workspace app lingui:compile",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "prepare": "husky",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:status": "supabase status",
    "supabase:logs": "supabase logs",
    "supabase:migration:new": "supabase migration new",
    "supabase:migration:up": "supabase migration up"
  },
  "packageManager": "yarn@4.7.0",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css}": [
      "biome check --write"
    ]
  },
  "resolutions": {
    "react": "19.1.0",
    "react-native-renderer": "19.1.0"
  }
}
